{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "metadata": {
    "_generator": {
      "name": "bicep",
      "version": "0.5.6.12127",
      "templateHash": "15014882513681156573"
    }
  },
  "parameters": {   
    "principalId": {
      "type": "string",
      "metadata": {
        "description": "Specifies the principal ID assigned to the role, use following command to get principal id of user: az ad user show --id jondoe@contoso.com --query id"
      }
    },
    "roleName": {
      "type": "string",
      "defaultValue": "promptflow-user",
      "metadata": {
        "description": "Name of the custom role"
      }
    },    
    "workspaceName": {
        "type": "string",
        "metadata": {
          "description": "The name of the workspace."
        }
    },
    "storageAccountName": {
        "type": "string",
        "metadata": {
          "description": "The name of the storage account linked with workspace."
        }
    },
    "acrName": {
        "type": "string",
        "metadata": {
          "description": "The name of the ACR linked with workspace."
        }
    }
  },
  "variables": { 
    "customRoleId": "[guid(parameters('roleName'))]",
    "storageAccountResourceId": "[resourceId('Microsoft.Storage/storageAccounts', parameters('storageAccountName'))]",
    "acrResourceId": "[resourceId('Microsoft.ContainerRegistry/registries', parameters('acrName'))]",
    "workspaceResourceId": "[resourceId('Microsoft.MachineLearningServices/workspaces', parameters('workspaceName'))]",  
    "storageRoleAssignmentName": "[guid(parameters('principalId'), variables('customRoleId'), variables('storageAccountResourceId'))]",
    "workspaceRoleAssignmentName": "[guid(parameters('principalId'), variables('customRoleId'), variables('workspaceResourceId'))]",
    "acrRoleAssignmentName": "[guid(parameters('principalId'), variables('customRoleId'), variables('acrResourceId'))]"
    
  },
  "resources": [
    {
      "type": "Microsoft.Authorization/roleAssignments",
      "apiVersion": "2021-04-01-preview",
      "name": "[variables('storageRoleAssignmentName')]",
      "scope": "[concat('Microsoft.Storage/storageAccounts/', parameters('storageAccountName'))]",  
      "properties": {
        "roleDefinitionId": "[resourceId('Microsoft.Authorization/roleDefinitions', variables('customRoleId'))]",
        "principalId": "[parameters('principalId')]"
      }
    },
    {
        "type": "Microsoft.Authorization/roleAssignments",
        "apiVersion": "2021-04-01-preview",
        "name": "[variables('workspaceRoleAssignmentName')]",
        "scope": "[concat('Microsoft.MachineLearningServices/workspaces/', parameters('workspaceName'))]",  
        "properties": {
          "roleDefinitionId": "[resourceId('Microsoft.Authorization/roleDefinitions', variables('customRoleId'))]",
          "principalId": "[parameters('principalId')]"
        }
    },
    {
        "type": "Microsoft.Authorization/roleAssignments",
        "apiVersion": "2021-04-01-preview",
        "name": "[variables('acrRoleAssignmentName')]",
        "scope": "[concat('Microsoft.ContainerRegistry/registries/', parameters('AcrName'))]",  
        "properties": {
          "roleDefinitionId": "[resourceId('Microsoft.Authorization/roleDefinitions', variables('customRoleId'))]",
          "principalId": "[parameters('principalId')]"
        }
    }    
  ]
}